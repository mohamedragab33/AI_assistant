# Bitcoin Trading AI - Environment Configuration
# Copy this file to .env and configure your values

# ==============================================
# üîê AUTHENTICATION & SECURITY
# ==============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8

# ==============================================
# üìä DATABASE CONFIGURATION
# ==============================================
# MongoDB Settings
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password
MONGODB_URL=mongodb://admin:your-secure-mongodb-password@mongodb:27017/btc_trading?authSource=admin

# ==============================================
# üåê API CONFIGURATION
# ==============================================
# Base URLs for APIs
API_BASE_URL=https://yourdomain.com
AUTH_API_BASE_URL=https://yourdomain.com

# Development URLs (local)
# API_BASE_URL=http://localhost:8000
# AUTH_API_BASE_URL=http://localhost:8001

# ==============================================
# üìà BINANCE API (Optional - for real trading)
# ==============================================
# Leave empty for demo mode
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# ==============================================
# üöÄ DEPLOYMENT SETTINGS
# ==============================================
NODE_ENV=production
ENVIRONMENT=production

# Domain configuration
DOMAIN=yourdomain.com
SSL_EMAIL=your-email@domain.com

# ==============================================
# üìä MONITORING & LOGGING (Optional)
# ==============================================
# Sentry for error tracking
SENTRY_DSN=

# Log levels
LOG_LEVEL=INFO
DEBUG=false

# ==============================================
# üîß PERFORMANCE SETTINGS
# ==============================================
# Rate limiting
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=20

# Cache settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# ==============================================
# üìß NOTIFICATIONS (Optional)
# ==============================================
# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==============================================
# üõ°Ô∏è SECURITY HEADERS
# ==============================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ==============================================
# üíæ BACKUP CONFIGURATION
# ==============================================
# S3 backup settings (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

